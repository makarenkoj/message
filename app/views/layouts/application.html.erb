<!DOCTYPE html>
<html>
  <head>
    <title>Message</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="content">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a><%= link_to 'Home page', users_path, class: "navbar-brand" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a>
                <%= link_to current_user.email, current_user, class: "nav-link" %>
                <span class="sr-only">
              (current)
            </span>
              </a>
            </li>
            <li class="nav-item active">
              <a>
                <%= link_to 'Выйти', destroy_user_session_path,method: :delete, class: "nav-link" %>
                <span class="sr-only">
              (current)
            </span>
              </a>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a>
                <%= link_to 'Войти', new_user_session_path, class: "nav-link"%>
                <span class="sr-only">v
              (current)
            </span>
              </a>
            </li>
            <li class="nav-item active">
              <a>
                <%= link_to 'Зарегистрироваться', new_user_registration_path, class: "nav-link" %>
                <span class="sr-only">
              (current)
            </span>
              </a>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
  <footer class="footer page-footer font-small navbar-dark bg-dark">
    <div class="footer-copyright text-center py-3">© <%= (DateTime.now).strftime('%Y') %> Copyright:
      <a href="http://localhost:3000/">localhost:3000</a>
    </div>
  </footer>
  </body>
</html>
